@using System.Threading.Tasks
@using Trade_MVC6.ViewModels.Account
@model ResetPasswordViewModel

<article class="row">
    <div class="col-md-offset-1 col-md-10 panel panel-default">
        <h1 class="panel-heading">Изменение пароля учётной записи</h1>
        <form class="form-horizontal panel-body" role="form" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <input asp-for="Code" type="hidden"/>

            <div class="form-group">
                <label asp-for="Email" class="col-lg-2"></label>
                <div class="col-lg-10">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input asp-for="Email" class="form-control" type="email" placeholder="xxx@xxx.xxx"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-lg-2"></label>
                <div class="col-lg-10">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Пароль"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-lg-2"></label>
                <div class="col-lg-10">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Повторить пароль"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button id="confirm" class="btn btn-success" type="button">Готово</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-success">Отмена</a>
                </div>
            </div>

        </form>
    </div>
</article>

<script>
    $(function () {
        var $confirmButton = $("#confirm");
        var handler = function (evt) {

            if (!$("form").valid()) {
                //$(evt.currentTarget).one("click",handler);
                $confirmButton.one("click", handler);
                return false;
            }

            var req = {
                method: 'POST',
                url: "@Url.Action("ResetPassword", "Account")",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=utf-8'
                }
            }

            req.data = $("form").serialize();

            console.log(req);

            $.ajax(req).then(function (data) {
@{#if DEBUG }
                console.log("Ajax OK");
@{ #endif }
                $("article").html(data);
            }, function (jqXHR, textStatus, errorThrown) {

@{#if DEBUG }
            console.log("Ajax Error");
            console.log(textStatus, errorThrown);
@{ #endif }
                $confirmButton.one("click", handler);
            });

            return false;
        }

        $confirmButton.one("click", handler);
    });
</script>